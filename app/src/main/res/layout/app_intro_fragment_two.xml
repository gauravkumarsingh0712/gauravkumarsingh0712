<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4b400"
    android:clipChildren="false">

    <FrameLayout
        android:id="@id/images"
        android:layout_width="@dimen/welcome_images_size"
        android:layout_height="@dimen/welcome_images_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_images_margin_top"
        android:clipChildren="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/mobile_phone" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="right|center_vertical"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/a003"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="66dp"
            android:scaleType="centerInside"
            android:src="@drawable/lang" />

        <ImageView
            android:id="@+id/a004"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="64dp"
            android:layout_marginTop="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/lang" />

        <ImageView
            android:id="@+id/a005"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/nackless" />

        <ImageView
            android:id="@+id/a006"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="152dp"
            android:scaleType="centerInside"
            android:src="@drawable/sadi" />
    </FrameLayout>

    <TextView
        android:id="@id/heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/images"
        android:layout_below="@+id/images"
        android:layout_marginLeft="@dimen/welcome_text_margin"
        android:layout_marginRight="@dimen/welcome_text_margin"
        android:layout_marginTop="24dp"
        android:text="Where" />

    <TextView
        android:id="@id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/images"
        android:layout_below="@+id/heading"
        android:layout_marginLeft="@dimen/welcome_text_margin"
        android:layout_marginRight="@dimen/welcome_text_margin"
        android:layout_marginTop="8dp"
        android:minHeight="@dimen/welcome_content_min_height"
        android:text="Here" />

</RelativeLayout>